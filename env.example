# Google Generative AI API Key
# Get your API key from: https://aistudio.google.com/app/apikey
# Copy this file to .env.local and add your actual API key
GOOGLE_GENERATIVE_AI_API_KEY=your_api_key_here

# Database connection string
# For local development, you can use PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/patient_actor?schema=public"
DATABASE_URL="postgresql://localhost:5432/patient_actor"

# Database connection for Prisma (use pooled connection)
POSTGRES_PRISMA_URL="postgresql://localhost:5432/patient_actor"
# Direct database connection (non-pooled)
DATABASE_URL_UNPOOLED="postgresql://localhost:5432/patient_actor"

# Better Auth Configuration
# Random secret for encryption (generate a secure random string)
BETTER_AUTH_SECRET=your_secret_key_here_generate_a_random_string
# Base URL of your application
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

